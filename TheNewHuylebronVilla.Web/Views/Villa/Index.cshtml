@model IEnumerable<NewHuylebronVilla . Domain . Entities . Villa>
<div class="card border-0 shadow-lg rounded-4">
    <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #28a745, #218838);">
        <h2 class="fw-bold mb-0">🏡 Danh sách Biệt Thự</h2>
    </div>
    <div class="card-body p-4">
        <div class="d-flex justify-content-end mb-3">
            <a asp-controller="Villa" asp-action="Create" class="btn btn-lg btn-success shadow-sm px-4 py-2 rounded-pill">
                <i class="bi bi-plus-circle"></i> Thêm Biệt Thự
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle text-center table-bordered">
                <thead class="table-success text-dark">
                    <tr>
                        <th class="py-3">🏠 Tên</th>
                        <th class="py-3">💲 Giá cả</th>
                        <th class="py-3">📏 Diện tích (ft²)</th>
                        <th class="py-3">👥 Sức chứa</th>
                        <th class="py-3">⚙️ Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td class="py-3 fw-semibold">@obj.Name</td>
                            <td class="py-3 text-success fw-bold">$@obj.Price.ToString("N0")</td>
                            <td class="py-3">@obj.Sqft.ToString("N0") ft²</td>
                            <td class="py-3">@obj.Occupancy</td>
                            <td class="py-3">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Villa" asp-action="Update" asp-route-villaId="@obj.Id"
                                       class="btn btn-outline-success mx-1">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a>
                                    <a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@obj.Id"
                                       class="btn btn-outline-danger mx-1">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
