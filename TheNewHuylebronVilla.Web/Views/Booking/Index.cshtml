@using NewHuylebronVilla.Application.Common.Division
@{
    var status = Context.Request.Query["status"];

    var approved = "";
    var pending = "";
    var checkedIn = "";
    var completed = "";
    var cancelled = "";

    switch (status)
    {
        case Claim.StatusPending:
            pending = "text-white bg-success";
            break;
        case Claim.StatusApproved:
            approved = "text-white bg-success";
            break;
        case Claim.StatusCheckedIn:
            checkedIn = "text-white bg-success";
            break;
        case Claim.StatusCompleted:
            completed = "text-white bg-success";
            break;
        case Claim.StatusCancelled:
            cancelled = "text-white bg-success";
            break;
        default:
            break;
    }
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Danh sách đặt biệt thự </h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="d-flex justify-content-end pb-4 pt-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" asp-controller="Booking" asp-action="Index"
                   asp-route-status="@Claim.StatusPending">
                    <li class="list-group-item @pending"> Chờ duyệt </li>
                </a>
                <a style="text-decoration:none;" asp-controller="Booking" asp-action="Index"
                   asp-route-status="@Claim.StatusApproved">
                    <li class="list-group-item @approved"> Đã duyệt </li>
                </a>
                <a style="text-decoration:none;" asp-controller="Booking" asp-action="Index"
                   asp-route-status="@Claim.StatusCheckedIn">
                    <li class="list-group-item @checkedIn"> Đã nhận phòng </li>
                </a>
                <a style="text-decoration:none;" asp-controller="Booking" asp-action="Index"
                   asp-route-status="@Claim.StatusCompleted">
                    <li class="list-group-item @completed"> Hoàn thành </li>
                </a>
                <a style="text-decoration:none;" asp-controller="Booking" asp-action="Index"
                   asp-route-status="@Claim.StatusCancelled">
                    <li class="list-group-item @cancelled"> Đã hủy </li>
                </a>
            </ul>
        </div>
        <table id="tblBookings" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Trạng thái</th>
                <th>Ngày nhận phòng</th>
                <th>Số đêm</th>
                <th>Tổng cộng</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/booking.js"></script>
}

