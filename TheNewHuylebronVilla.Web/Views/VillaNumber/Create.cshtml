@model TheNewHuylebronVilla.Web.ViewModels.VillaNumberVM

<div class="w-100 card border-0 p-4">
    <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #28a745, #218838);">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">tạo mới mã số  </h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <div class="p-3">
                @* <div asp-validation-summary="All"></div> *@
                <div class="form-floating py-1 col-12">
                    <select asp-for="@Model.VillaNumber.VillaId" asp-items="@Model.VillaList"
                            class="form-select border shadow">
                        <option disabled selected>--chọn biệt thự --</option>
                    </select>
                    <label asp-for="VillaNumber.VillaId" class="ms-2">biệt thự</label>
                    <span asp-validation-for="VillaNumber.VillaId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="VillaNumber.Villa_Number" class="form-control border shadow" />
                    <label asp-for="VillaNumber.Villa_Number" class="ms-2">số biệt thự</label>
                    <span asp-validation-for="VillaNumber.Villa_Number" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="VillaNumber.SpecialDetails" class="form-control border shadow" />
                    <label asp-for="VillaNumber.SpecialDetails" class="ms-2">chi tiết đặc biệt</label>
                    <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> tạo
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="VillaNumber" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> hủy
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    /* Cải thiện hiển thị form */
    .form-floating input, .form-floating textarea {
        border-radius: 10px;
        padding-left: 15px;
    }

    /* Hiệu ứng hover */
    .btn:hover {
        opacity: 0.9;
    }

    /* Tạo khoảng cách giữa form và nút */
    .row .btn {
        padding: 10px;
        font-size: 16px;
    }
</style>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

