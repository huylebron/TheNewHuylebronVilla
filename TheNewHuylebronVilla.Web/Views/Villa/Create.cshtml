@model NewHuylebronVilla.Domain.Entities.Villa

<div class="card shadow-lg border-0 rounded-lg">
    <div class="card-header bg-success bg-gradient text-center py-4">
        <h2 class="text-white"><i class="bi bi-building"></i>  thêm Biệt Thự mới </h2>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row g-3" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>

            <div class="form-floating col-12">
                <input asp-for="Name" class="form-control border shadow-sm" placeholder="Villa Name" />
                <label asp-for="Name" class="ms-2"><i class="bi bi-house-door-fill"></i> Tên</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-floating col-12">
                <textarea asp-for="Description" class="form-control border shadow-sm" placeholder="Description" style="height: 100px;"></textarea>
                <label asp-for="Description" class="ms-2"><i class="bi bi-card-text"></i> tiêu đề </label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-floating col-md-6">
                <input asp-for="Price" type="number" class="form-control border shadow-sm" placeholder="Price" />
                <label asp-for="Price" class="ms-2"><i class="bi bi-cash-coin"></i> Giá cả </label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-floating col-md-6">
                <input asp-for="Sqft" type="number" class="form-control border shadow-sm" placeholder="Square Feet" />
                <label asp-for="Sqft" class="ms-2"><i class="bi bi-rulers"></i> Diện tích (ft²) </label>
                <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>

            <div class="form-floating col-md-6">
                <input asp-for="Occupancy" type="number" class="form-control border shadow-sm" placeholder="Occupancy" />
                <label asp-for="Occupancy" class="ms-2"><i class="bi bi-people-fill"></i> Sức chứa </label>
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>
                
            <div class="form-floating col-md-6">
                <input asp-for="ImageUrl" type="url" class="form-control border shadow-sm" placeholder="Image URL" />
                <label asp-for="ImageUrl" class="ms-2"><i class="bi bi-image-fill"></i> ảnh URL </label>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            
            <div class="col-12 d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-lg btn-success shadow-sm px-4 py-2 rounded-pill">
                    <i class="bi bi-check-circle"></i> thêm 
                </button>
                <a asp-controller="Villa" asp-action="Index" class="btn btn-lg btn-secondary shadow-sm px-4 py-2 rounded-pill">
                    <i class="bi bi-x-circle"></i> hủy
                </a>
            </div>

         
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
