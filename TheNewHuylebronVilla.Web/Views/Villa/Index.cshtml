@model IEnumerable<NewHuylebronVilla.Domain.Entities.Villa>

<div class="card border-0 shadow-lg rounded-4">
    <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #28a745, #218838);">
        <h2 class="fw-bold mb-0">
            <i class="bi bi-house-door"></i> Danh sách Biệt Thự
        </h2>
    </div>
    <div class="card-body p-4">
        <div class="d-flex justify-content-between mb-3">
            <input type="text" id="searchBox" class="form-control w-25" placeholder="🔍 Tìm kiếm biệt thự...">
            <a asp-controller="Villa" asp-action="Create" class="btn btn-lg btn-success shadow-sm px-4 py-2 rounded-pill">
                <i class="bi bi-plus-circle"></i> Thêm Biệt Thự
            </a>
        </div>
        <div class="table-responsive" style="max-height: 500px;">
            <table class="table table-hover align-middle text-center table-bordered" id="villaTable">
                <thead class="table-success text-dark">
                    <tr>
                        <th class="py-3 sticky-header">🏠 Tên</th>
                        <th class="py-3 sticky-header">💲 Giá cả</th>
                        <th class="py-3 sticky-header">📏 Diện tích (ft²)</th>
                        <th class="py-3 sticky-header">👥 Sức chứa</th>
                        <th class="py-3 sticky-header">⚙️ Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td class="py-3 text-start fw-semibold">@obj.Name</td>
                                <td class="py-3 text-success fw-bold">$@obj.Price.ToString("N0")</td>
                                <td class="py-3 text-start">@obj.Sqft.ToString("N0") ft²</td>
                                <td class="py-3 text-center">@obj.Occupancy</td>
                                <td class="py-3">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-controller="Villa" asp-action="Update" asp-route-villaId="@obj.Id"
                                           class="btn btn-outline-success">
                                            <i class="bi bi-pencil-square"></i> Sửa
                                        </a>
                                        <a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@obj.Id"
                                           class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i> Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                🏡 Chưa có biệt thự nào được thêm.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Cố định tiêu đề bảng khi cuộn */
    .sticky-header {
        position: sticky;
        top: 0;
        background-color: #28a745 !important;
        color: white !important;
        z-index: 10;
    }

    /* Tạo hiệu ứng hover cho bảng */
    .table-hover tbody tr:hover {
        background-color: #f8f9fa !important;
    }
</style>

<script>
    // Chức năng tìm kiếm biệt thự
    document.getElementById("searchBox").addEventListener("keyup", function () {
        let searchValue = this.value.toLowerCase();
        let rows = document.querySelectorAll("#villaTable tbody tr");

        rows.forEach(row => {
            let name = row.cells[0].textContent.toLowerCase();
            if (name.includes(searchValue)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    });
</script>
